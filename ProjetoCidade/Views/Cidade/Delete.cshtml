@model ProjetoCidade.Models.Cidade

@{
    Layout = null;
}

<div class="row" style="margin-left:50px;">
    <h1>Tem certeza que deseja remover o cadastro ? </h1>
</div>


<div class="row" style="margin-left:50px;">
    <h3>
        @Html.DisplayNameFor(model => model.nome)
        @Html.DisplayFor(model => model.nome)
    </h3>
</div>
<div class="row" style="margin-left:50px;">
    <h3>
        @Html.DisplayNameFor(model => model.estado.nome)
        @Html.DisplayFor(model => model.estado.nome) 
    </h3>
</div>

<br />

@using (Html.BeginForm())
            {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-4" />
        <div class="col-sm-2">
            <div class="form-actions no-color" style="margin-left:30px;">
                <input type="submit" value="Confirmar" class="btn btn-danger btn-sm" />
            </div>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-default btn-sm" href="@Url.Action("Index","Cidade")"> Fechar </a>
        </div>
        <div class="col-sm-4" />
    </div>
    <br />
}